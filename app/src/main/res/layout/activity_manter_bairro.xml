<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.ManterBairro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewIdB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Bairros:" />

        <EditText
            android:id="@+id/editTextBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Bairro"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonsalvarN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="salvar" />

        <Button
            android:id="@+id/buttonapagarN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="apagar" />

        <ListView
            android:id="@+id/listviewnecessidade"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>